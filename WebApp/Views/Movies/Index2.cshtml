@model IEnumerable<WebApp.Models.Movie>

@{
    ViewData["Title"] = "Browse Movies";
}
<!--List of movies-->
<div class="section-padding">
    <div class="container-fluid">
        <div class="section-title-main">
            <div class="row">
                <div class="col-md-9">
                    <h2 class="section-title">LIST OF MOVIES</h2>

                </div>
                <div class="col-md-3">
                    <form asp-controller="Movies" asp-action="Index2" method="get">
                        <input type="text" name="searchKeyword" placeholder="Search...">
                        <button type="submit">Search</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model) {
            <div class="col-lg-3 col-md-4">
                <div class="movie-info">
                        <a href="@Url.Action("Details", new { id = item.Id })">
                        <div class="movie-image">
                                <img decoding="async" src="@("~/uploads/"+item.PosterURL)" asp-append-version="true" alt="@item.Title" class="img-fluid" />
                        </div>
                            <h2 class="movie-name">@item.Title</h2>
                        <div class="rating">
                                @item.Rating
                                <img decoding="async" src="@("~/uploads/default/star-icon.webp")" asp-append-version="true" width="20px" />
                        </div>
                    </a>
                </div>
            </div>
            }

        </div>
    </div>
</div>